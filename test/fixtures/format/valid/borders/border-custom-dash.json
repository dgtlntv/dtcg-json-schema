{
    "$description": "Border with custom dash array stroke style",
    "border": {
        "$type": "border",
        "$value": {
            "color": {
                "colorSpace": "srgb",
                "components": [1, 0, 0]
            },
            "width": {
                "value": 2,
                "unit": "px"
            },
            "style": {
                "dashArray": [
                    {
                        "value": 8,
                        "unit": "px"
                    },
                    {
                        "value": 4,
                        "unit": "px"
                    }
                ],
                "lineCap": "round"
            }
        }
    }
}
