{
    "$description": "Extracting individual properties from typography composite tokens",
    "base-typography": {
        "$type": "typography",
        "$value": {
            "fontFamily": ["Helvetica Neue", "Arial", "sans-serif"],
            "fontSize": {
                "value": 16,
                "unit": "px"
            },
            "fontWeight": 400,
            "letterSpacing": {
                "value": 0,
                "unit": "px"
            },
            "lineHeight": 1.5
        }
    },
    "extracted-font-family": {
        "$description": "Extract just the fontFamily",
        "$type": "fontFamily",
        "$ref": "#/base-typography/$value/fontFamily"
    },
    "extracted-font-size": {
        "$description": "Extract just the fontSize dimension",
        "$type": "dimension",
        "$ref": "#/base-typography/$value/fontSize"
    },
    "extracted-line-height": {
        "$description": "Extract just the lineHeight number",
        "$type": "number",
        "$ref": "#/base-typography/$value/lineHeight"
    },
    "typography-inheriting-parts": {
        "$description": "Typography that inherits some properties from base",
        "$type": "typography",
        "$value": {
            "fontFamily": {
                "$ref": "#/base-typography/$value/fontFamily"
            },
            "fontSize": {
                "value": 24,
                "unit": "px"
            },
            "fontWeight": 700,
            "letterSpacing": {
                "$ref": "#/base-typography/$value/letterSpacing"
            },
            "lineHeight": {
                "$ref": "#/base-typography/$value/lineHeight"
            }
        }
    }
}
