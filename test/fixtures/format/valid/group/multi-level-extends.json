{
    "$description": "Multiple levels of inheritance: primary-button extends button extends base-component",
    "base-component": {
        "$type": "color",
        "background": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0.95, 0.95, 0.95],
                "hex": "#f2f2f2"
            }
        },
        "text": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0.2, 0.2, 0.2],
                "hex": "#333333"
            }
        },
        "border": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0.8, 0.8, 0.8],
                "hex": "#cccccc"
            }
        }
    },
    "button": {
        "$extends": "{base-component}",
        "background": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0, 0.4, 0.8],
                "hex": "#0066cc"
            }
        },
        "text": {
            "$value": {
                "colorSpace": "srgb",
                "components": [1, 1, 1],
                "hex": "#ffffff"
            }
        },
        "hover": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0, 0.3, 0.6],
                "hex": "#004d99"
            }
        }
    },
    "primary-button": {
        "$extends": "{button}",
        "background": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0.8, 0, 0.4],
                "hex": "#cc0066"
            }
        },
        "hover": {
            "$value": {
                "colorSpace": "srgb",
                "components": [0.6, 0, 0.3],
                "hex": "#99004d"
            }
        }
    }
}
