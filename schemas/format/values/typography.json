{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dgtln.tv/schemas/2025.10/format/values/typography.json",
    "title": "Typography Value",
    "description": "Value schema for typography type tokens. Represents a typographic style.",
    "type": "object",
    "properties": {
        "fontFamily": {
            "description": "The typography's font",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/fontFamily.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        },
        "fontSize": {
            "description": "The size of the typography",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/dimension.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        },
        "fontWeight": {
            "description": "The weight of the typography",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/fontWeight.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        },
        "letterSpacing": {
            "description": "The horizontal spacing between characters",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/dimension.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        },
        "lineHeight": {
            "description": "The vertical spacing between lines of typography (interpreted as a multiplier of fontSize)",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/number.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        }
    },
    "required": [
        "fontFamily",
        "fontSize",
        "fontWeight",
        "letterSpacing",
        "lineHeight"
    ],
    "additionalProperties": false
}
