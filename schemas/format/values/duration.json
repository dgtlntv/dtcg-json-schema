{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://designtokens.org/schema/2025.10/format/values/duration",
    "title": "Duration Value",
    "description": "Value schema for duration type tokens. Represents the length of time in milliseconds an animation or animation cycle takes to complete.",
    "type": "object",
    "properties": {
        "value": {
            "description": "An integer or floating-point value representing the numeric value.",
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                }
            ]
        },
        "unit": {
            "description": "Unit of time. Supported values: 'ms' (millisecond), 's' (second).",
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["ms", "s"]
                },
                {
                    "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/jsonPointerReferenceObject"
                }
            ]
        }
    },
    "required": ["value", "unit"],
    "additionalProperties": false
}
