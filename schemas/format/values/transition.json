{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dgtln.tv/schemas/2025.10/format/values/transition.json",
    "title": "Transition Value",
    "description": "Value schema for transition type tokens. Represents an animated transition between two states.",
    "type": "object",
    "properties": {
        "duration": {
            "description": "The duration of the transition",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/duration.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        },
        "delay": {
            "description": "The time to wait before the transition begins",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/duration.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        },
        "timingFunction": {
            "description": "The timing function of the transition",
            "oneOf": [
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/values/cubicBezier.json"
                },
                {
                    "$ref": "https://dgtln.tv/schemas/2025.10/format/format.json#/$defs/tokenValueReference"
                }
            ]
        }
    },
    "required": ["duration", "delay", "timingFunction"],
    "additionalProperties": false
}
