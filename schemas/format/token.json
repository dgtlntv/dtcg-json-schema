{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://designtokens.org/schema/2025.10/format/token",
    "title": "Token",
    "description": "A token in the DTCG specification",
    "type": "object",
    "oneOf": [
        {
            "required": ["$value"]
        },
        {
            "required": ["$ref"]
        }
    ],
    "properties": {
        "$value": {
            "description": "The token's value - can be a direct value or a reference to another token using curly brace syntax (e.g., '{token.name}'). Mutually exclusive with $ref."
        },
        "$type": {
            "$ref": "https://designtokens.org/schema/2025.10/format/tokenType"
        },
        "$ref": {
            "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/jsonPointerReference",
            "description": "JSON Pointer reference (RFC 6901) for advanced referencing. Use this instead of $value for property-level references. Examples: '#/colors/blue/$value' or '#/colors/blue/$value/components/0'. Mutually exclusive with $value."
        },
        "$description": {
            "type": "string",
            "description": "A plain text description of the token"
        },
        "$extensions": {
            "type": "object",
            "description": "Vendor-specific extensions"
        },
        "$deprecated": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "string"
                }
            ],
            "description": "Whether this token is deprecated"
        }
    },
    "additionalProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "$type": { "const": "color" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/color"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "dimension" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/dimension"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "fontFamily" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/fontFamily"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "fontWeight" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/fontWeight"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "duration" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/duration"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "cubicBezier" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/cubicBezier"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "number" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/number"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "strokeStyle" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/strokeStyle"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "border" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/border"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "transition" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/transition"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "shadow" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/shadow"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "gradient" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/gradient"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "$type": { "const": "typography" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/typography"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "allOf": [
                    {
                        "not": {
                            "required": ["$type"]
                        }
                    },
                    {
                        "required": ["$value"]
                    },
                    {
                        "properties": {
                            "$value": {
                                "not": {
                                    "$ref": "https://designtokens.org/schema/2025.10/format#/$defs/tokenValueReference"
                                }
                            }
                        }
                    }
                ]
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/color"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/dimension"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/fontFamily"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/fontWeight"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/duration"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/cubicBezier"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/number"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/strokeStyle"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/border"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/transition"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/shadow"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/gradient"
                            },
                            {
                                "$ref": "https://designtokens.org/schema/2025.10/format/values/typography"
                            }
                        ]
                    }
                }
            }
        }
    ]
}
